#!/bin/sh

HOME_CONFIG=(
	asoundrc
	gitconfig
	mpd
	ncmpcpp
	tmux.conf
	xinitrc
	zlogin
	zprofile
	zsh
	zshenv
	zshrc
)

XDG_CONFIG=(
	fontconfig
	nvim
	picom
	setxkbmap
	vifm
)

main() {
	git pull --rebase --prune $@
	git submodule update --init --recursive
	git submodule update --remote --merge

	for home in ${HOME_CONFIG[@]}; do
		cp -ruv $(pwd -P)/.$home $HOME
	done

	for xdg in ${XDG_CONFIG[@]}; do
		cp -ruv $(pwd -P)/.config/$xdg $HOME/.config/
	done
}

main "$@"

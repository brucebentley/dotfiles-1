alias usc-enable="systemctl --user enable"
alias usc-disable="systemctl --user disable"
alias usc-reenable="systemctl --user reenable"
alias usc-preset="systemctl --user preset"
alias usc-mask="systemctl --user mask"
alias usc-unmask="systemctl --user unmask"
alias usc-link="systemctl --user link"
alias usc-load="systemctl --user load"
alias usc-cancel="systemctl --user cancel"
alias usc-set-environment="systemctl --user set-environment"
alias usc-unset-environment="systemctl --user unset-environment"
